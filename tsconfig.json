{
    "compileOnSave": false,
    "compilerOptions": {
        "typeRoots": ["node_modules/@minecraft"],
        "lib": ["esnext"],
        "target": "esnext",
        "module": "esnext",
        "sourceMap": false,
        "moduleResolution": "node",
        "outDir": "build/scripts",
        "removeComments": false,
        "allowJs": true,
        "checkJs": false,
        "useDefineForClassFields": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noImplicitAny": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
